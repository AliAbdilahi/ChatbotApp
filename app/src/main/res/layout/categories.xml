<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="113dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/dent" />
            <TextView
                android:id="@+id/choose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Choose Your Categories"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"

                android:layout_marginTop="13dp"/>


            <ImageButton
                android:id="@+id/imagebtn1"
                android:layout_width="388dp"
                android:layout_height="239dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/implnt" />
            <ImageButton
                android:id="@+id/imagebtn2"
                android:layout_width="388dp"
                android:layout_height="239dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/general" />
            <ImageButton
                android:id="@+id/imagebtn3"
                android:layout_width="388dp"
                android:layout_height="239dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/digi" />

            <TextView
                android:id="@+id/soon"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="More Coming Soon...."
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>